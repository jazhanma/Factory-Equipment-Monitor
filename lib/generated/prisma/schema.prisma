generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}

model Alert {
  id          String     @id @default(cuid())
  type        String
  message     String
  severity    String
  createdAt   DateTime   @default(now())
  resolvedAt  DateTime?
  equipmentId String?
  equipment   Equipment? @relation(fields: [equipmentId], references: [id], onDelete: SetNull)
}

model Equipment {
  id        String   @id @default(cuid())
  name      String
  alerts    Alert[]
  createdAt DateTime @default(now())
}
